<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.dao.BorRowerDao">
	<!--查询所有个人客户  -->
	<select id="findBorRowers" resultType="com.entity.BorRower">
		<!-- select b.*,c.contect_name,c.contect_gender,c.contect_birthday,c.contect_cardtype,c.contect_cardnumber,c.contect_address,c.contect_telphone from contect c,borrower b,contectUser con where c.contect_id=con.contect_id and b.borrower_id=con.borrower_id --> 
		select b.bor_id,b.bor_name,b.bor_gender,b.bor_birthday,b.bor_nation,b.bor_marry,b.bor_cardtype,b.bor_cardnumber,b.bor_register,b.bor_address,b.bor_unit,b.bor_unit_address,b.bor_unit_phone,b.bor_position,b.bor_income,b.bor_phone,b.bor_postcode,b.bor_education,b.bor_photo,c.* from contectUser  con join borrower  b on  b.bor_id=con.contect_id join contect  c on  c.contect_id=con.bcom_id order by b.bor_id desc
	<!-- select bor_id,bor_name,bor_gender,bor_birthday,bor_nation,bor_marry,bor_cardtype,bor_cardnumber,bor_register,bor_address,bor_unit,bor_unit_address,bor_unit_phone,bor_position,bor_income,bor_phone,bor_postcode,bor_education,bor_photo from borrower	-->
	</select>
	<!-- 客户人名模糊查询 -->
	<select id="findBorRowersMohu" resultType="com.entity.BorRower">
		select b.*, c.* from contectUser  con join borrower  b on  b.bor_id=con.contect_id join contect  c on  c.contect_id=con.bcom_id
		where
			<if test="_parameter !=null">
					b.bor_name like '%'||#{_parameter}||'%'
			</if>
	</select>
	
	<!--添加  -->
	<insert id="addBorRowers" useGeneratedKeys="false" parameterType="com.entity.BorRower">
		insert into borrower values(borrower_seq.nextval,#{borName,jdbcType=VARCHAR},#{borGender,jdbcType=VARCHAR},#{borBirthday,jdbcType=VARCHAR},#{borNation,jdbcType=VARCHAR},#{borMarry,jdbcType=VARCHAR},#{borCardtype,jdbcType=VARCHAR},#{borCardnumber,jdbcType=VARCHAR},#{borRegister,jdbcType=VARCHAR},#{borAddress,jdbcType=VARCHAR},#{borUnit,jdbcType=VARCHAR},#{borUnitAddress,jdbcType=VARCHAR},#{borUnitPhone,jdbcType=VARCHAR},#{borPosition,jdbcType=VARCHAR},#{borIncome,jdbcType=NUMERIC},#{borPhone,jdbcType=VARCHAR},#{borPostcode,jdbcType=VARCHAR},#{borEducation,jdbcType=VARCHAR},#{borCredit,jdbcType=VARCHAR},#{borPhoto,jdbcType=VARCHAR})
	</insert>
	<!-- 修改  -->
	<update id="modifyBorRower" parameterType="com.entity.BorRower">
		update borrower set bor_name=#{borName,jdbcType=VARCHAR},bor_gender=#{borGender,jdbcType=VARCHAR},bor_birthday=#{borBirthday,jdbcType=VARCHAR},bor_nation=#{borNation,jdbcType=VARCHAR},
		bor_marry=#{borMarry,jdbcType=VARCHAR},bor_cardtype=#{borCardtype,jdbcType=VARCHAR},bor_cardnumber=#{borCardnumber,jdbcType=VARCHAR},bor_register=#{borRegister,jdbcType=VARCHAR},bor_address=#{borAddress,jdbcType=VARCHAR},bor_unit=#{borUnit,jdbcType=VARCHAR},
		bor_unit_address=#{borUnitAddress,jdbcType=VARCHAR},bor_unit_phone=#{borUnitPhone,jdbcType=VARCHAR},bor_position=#{borPosition,jdbcType=VARCHAR},bor_income=#{borIncome,jdbcType=NUMERIC},bor_phone=#{borPhone,jdbcType=VARCHAR},bor_postcode=#{borPostcode,jdbcType=VARCHAR},bor_education=#{borEducation,jdbcType=VARCHAR},bor_credit=#{borCredit,jdbcType=VARCHAR},bor_photo=#{borPhoto,jdbcType=VARCHAR} where borrower_id=#{borrowerId}
	</update>
	
</mapper>
	