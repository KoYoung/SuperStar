<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.dao.RoleDao">
	<!--  查询角色 -->
	<select id="findRole" resultType="com.entity.Role">
		select * from role
	</select>
	<!-- 添加角色 -->
	<insert id="addRole" parameterType="com.entity.Role">
		insert into role (role_id,role_name,role_comment) values(#{roleId,jdbcType=VARCHAR},#{roleName,jdbcType=VARCHAR},#{roleComment,jdbcType=VARCHAR})
	</insert>
</mapper>
